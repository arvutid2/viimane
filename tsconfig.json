{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@games/*": ["src/games/*"],
      "@modules/*": ["src/modules/*"],
      "@pages/*": ["src/pages/*"]
    },
    "strict": true,
    "noEmit": true
  },
  "include": ["src"]
}